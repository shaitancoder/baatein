<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context="com.example.sakshigarg.authfirebase.MainActivity">

       <ListView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:divider="@android:color/transparent"
           android:dividerHeight="5dp"
           android:id="@+id/list"
           android:stackFromBottom="true"
           android:layout_margin="5dp"
           android:layout_above="@+id/linearLayout"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/list"
        android:id="@+id/linearLayout">
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/camera2"
        android:id="@+id/camera" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:hint="TYPE YOUR MESSAGE"
            android:minHeight="40dp"
            android:textColorHint="@android:color/darker_gray"
            android:id="@+id/msg"
            android:textColor="#ffffff" />
        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/mic2"
            android:id="@+id/mic" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="34dp"
            android:background="@drawable/send"
            android:id="@+id/send"
            />

    </LinearLayout>
</RelativeLayout>
